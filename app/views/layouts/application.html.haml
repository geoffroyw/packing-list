!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/
    %meta{'http-equiv' => "X-UA-Compatible", :content => "width=device-width, initial-scale=1"}/
    %title PackingList
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapse{:type => 'button', 'data-toggle' => 'collapase', 'data-target' => '#navbar', 'aria-expanded'=>'false','aria-controls'=>'navbar'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '#'} Packing list
        .collapse.navbar-collapse#navbar
          %ul.nav.navbar-nav
            %li{:class => (current_page?(root_path) ? 'active' : '')}
              =link_to 'Home', root_path
            %li{:class => (controller_name == 'packages' && !current_page?(root_path) ? 'active' : '')}
              =link_to 'Packages', packages_path
            %li{:class => (controller_name == 'items' ? 'active' : '')}
              =link_to 'Items', items_path
    .container
      %br
      = yield


