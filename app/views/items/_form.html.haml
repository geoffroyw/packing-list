= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :original_price
    = f.text_field :original_price
  .field
    = f.label :original_currency
    = f.text_field :original_currency
  .field
    = f.label :bought_on
    = f.date_select :bought_on
  .actions
    = f.submit 'Save'
